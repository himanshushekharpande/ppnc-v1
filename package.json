{
  "name": "pranav-college",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:watch:tw\" \"npm:watch:hugo\"",
    "watch:tw": "tailwindcss -i ./assets/css/app.css -o ./static/css/style.css --watch",
    "watch:hugo": "hugo server -D",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./assets/css/app.css -o ./static/css/style.css --minify",
    "build": "npm run build:css && hugo --minify"
  },
  "dependencies": {
    "firebase-admin": "^12.5.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.12",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.0",
    "cross-env": "^10.1.0",
    "daisyui": "^5.1.27",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.10"
  }
}
